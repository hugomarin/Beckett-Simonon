{% block content %}
	<div class="row">
		<div class="twelve columns">
			<ul class="breadcrumbs">
			  <li><a href="/">Home</a></li>
			  <li><a href="#">View all Products</a></li>
			  <li class="current"><a href="#">Bailey Chukka Boot</a></li>
			</ul>
		</div>
	</div>
	
	<div class="row">
		<div class="large-12 columns">
			<h3 class="thetitle">{{ product.title }}</h3>
		</div>
	</div>
	
	<div class="row">
		<div class="large-3 columns">
			<div class="section-container tabs" data-section="tabs">
			  <section class="section">
			    <p class="title"><a href="#">INFO</a></p>
			    <div class="content">
			    	{{ product.description }}
			    </div>
			  </section>
			  <section class="section">
			    <p class="title"><a href="#">SPECIFICATIONS</a></p>
			    <div class="content">
			      <p><strong><span style="color: #666666;">Runs Big. If you regularly wear a half size, we recommend buying the nearest whole size down. Check our&nbsp;</span><a href="http://www.beckettsimonon.com/pages/size-guide"><span style="color: #0b5394;">size guide</span></a>.</strong><br> Nubuck leather upper.<br> Full leather lining.<br> Waxed cotton laces.<br> Tonal top-stitch detail.<br> Full-grain leather trim in the rear.<br> 3 eyelet vamp.<br> Rounded toe.<br> Stacked heel with durable rubber sole.<br> Includes a branded dust bag.<br> Heel height: 1.1"<br> Width: Medium (D)<br> Color: Camel.<br> Origin: South America.</p>
			    </div>
			  </section>
			</div>
			{% if product.images.size > 1 %}
			<div class="thumbs">
				{% for image in product.images %}
				{% if settings.enable_product_image_zoom %}
				<div class="image">
				  <a href="{{ image | product_img_url: 'original' }}" class="cloud-zoom-gallery" rel="useZoom: 'placeholder', smallImage: '{{ image | product_img_url: 'grande' }}', tint: '#ffffff'">
				    <img src="{{ image | product_img_url: 'small' }}" alt="{{ image.alt | escape }}">
				  </a>
				</div>
				{% else %}
				<div class="image">
				  <a href="{{ image | product_img_url: 'original' }}" data-original-image="{{ image | product_img_url: 'original' }}">
				    <img src="{{ image | product_img_url: 'compact' }}" alt="{{ image.alt | escape }}" />
				  </a>
				</div>
				{% endif %}
				{% endfor %}
			</div>
			  	{% endif %}
		</div>
		<div class="large-6 columns">
			{% if settings.enable_product_image_zoom %}
			<a href="{{ product.featured_image | product_img_url: 'original' }}" class="cloud-zoom" rel="position: 'inside', showTitle: 'false'" id="placeholder">
			  <img src="{{ product.featured_image | product_img_url: 'original' }}" alt="{{ product.featured_image.alt | escape }}" />
			</a>
			{% else %}
			<a href="{{ product.featured_image | product_img_url: 'original' }}" class="zoom" id="placeholder">
			  <img src="{{ product.featured_image | product_img_url: 'original' }}" alt="{{ product.featured_image.alt | escape }}" />
			</a>
			{% endif %}
		</div>
		<div class="large-3 columns">
			<div class="buy-box">
				<div class="purchase">
					<h3 class="price">{{ product.price_min | money }}{% if product.price_min < product.compare_at_price_min %} <del>{{ product.compare_at_price_min | money }}</del>{% endif %}</h3>
					<h6 class="label upper x-bold">-Free shipping-</h6>
				</div>
				<h6 class="upper">select size</h6>
				<form id="add-item-form" action="/cart/add" method="post" class="variants clearfix">
					<div class="product-options">
						{% if product.options.size > 1 %}
						<select id="product-select" name='id'>
							{% for variant in product.variants %}
								<option value="">Select Size</option>
								<option value="{{ variant.id }}">{{ variant.title }} - {{ variant.price | money }}</option>
							{% endfor %}
						</select>
						{% elsif product.options.size == 1 and product.variants.size > 1 %}
						<!-- <label>{{ product.options[0] }}</label>-->
						<select id="product-select" name='id'>
						    {% for variant in product.variants %}
						    <option value="">Select Size</option>
						    <option value="{{ variant.id }}">{{ variant.title }} - {{ variant.price | money }}</option>
						    {% endfor %}
						</select>
						<span class="upper small"><a href="/pages/size-guide" title="Size Guide">Size Guide</a></span>
						
						{% else %}
							<input type="hidden" name="id" value="{{ product.variants.first.id }}" />
						{% endif %}
						
						{% if settings.display_quantity_dropdown %}
						<div class="selector-wrapper">
						  <label>Quantity</label>
						  <textarea name="quantity" value="1" placeholder="1"></textarea>
						</div>
						{% endif %}
						{% unless product.available %}
					    	<p>Sold Out</p>
					    {% else %}
							<input type="submit" class="button secondary radius upper" name="add" value="Add to cart">
						{% endunless %}
					</div>
				</form>
			</div>
			
			{% if settings.show_social %}
			<div class="social">
				<ul class="panoramic share">
					<li>
						<span>SHARE:</span>
					</li>
					<li>
						<a href="https://www.facebook.com/BeckettSimonon" title="Beckett Simonon on Facebook" class="icon-social facebook">Facebook</a>
					</li>
					<li>
						<a href="https://pinterest.com/beckettsimonon/" title="Beckett Simonon on Pinterest" class="icon-social pinterest">Pinterest</a>
					</li>
				</ul>
			</div>
			{% endif %}
		</div>
		<div class="row">
			<div class="large-12 columns">
				<div class="more-options">
					<a class="upper label round">More items to consider</a><a class="upper label light round"> read reviews</a>
					<div recomatic="product" shop="{{shop.permanent_domain}}" product_id="{{product.id}}">
				</div>
			</div>
		</div>
	</div>
{% endblock %}
